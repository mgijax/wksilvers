#!/bin/sh

# variable definitions (edit as needed)
#CONFIG_REL=/usr/local/mgi/lib/python/Configuration.pyc
CONFIGURATION=Configuration

# ensure that the config file exists
if test ! -r $CONFIGURATION
then
	echo "Missing configuration file.  Please create $CONFIGURATION."
	exit 1
fi

# read variables from the config file
exec 4<&0
exec < $CONFIGURATION
while read name value junk
do
	case "$name" in
		LIBDIRS)
			LIBDIRS=$value;;
		CONFIGFILE)
			CONFIGFILE=$value;;
	esac
done
exec 0<&4

# add links to python and the config file from selected directories
if [ -h Configuration.pyc ]; then
	rm Configuration.pyc
fi

ln -s $CONFIGFILE Configuration.pyc

chmod 750 rosetta_report.cgi
chgrp www rosetta_report.cgi

